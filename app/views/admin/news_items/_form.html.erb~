<div id="news_item_form">
  <%= form_for @news_item, admin_news_items_path do |f| %>
    <% if @news_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@news_item.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @news_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :title, 'Заголовок' %>
    <%= f.text_field :title %>
    
    <%= f.label :text, 'Текст' %>
    <%= f.text_area :text %>
    
    <%= f.submit 'Опубликовать' %>
  <% end %>
</div>
