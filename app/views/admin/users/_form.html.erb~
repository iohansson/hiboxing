<div id="user_form">
  <%= form_for [:admin,@user] do |f| %>
    <%= f.label :name, 'Логин' %>
    <%= f.text_field, :name %>
    
    <%= f.label :password, 'Пароль' %>
    <%= f.password_field, :password %>
    
    <%= f.label :password_confirmation, 'Пароль еще раз' %>
    <%= f.password_field, :password_confirmation %>
    
    <%= f.submit 'Сохранить' %>
  <% end %>
</div>
