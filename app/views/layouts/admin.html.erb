<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "admin/application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div class="container table">
      <div class="nav cell valign-middle">
        <ul>
          <li><%= link_to 'Новости', admin_news_items_path %></li>
          <li><%= link_to 'Фото', admin_photos_path %></li>
          <li><%= link_to 'Пользователи', admin_users_path %></li>
          <li><%= link_to 'Группы', admin_groups_path %></li>
          <li><%= link_to 'Расписание', admin_events_path %></li>
          <li><%= link_to 'Тренеры', admin_coaches_path %></li>
          <li><%= link_to 'Залы', admin_gyms_path %></li>
          <li><%= link_to 'Спортсмены', admin_sportsmen_path %></li>
        </ul>
      </div>
      <div class="content cell">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </div>
  </body>
</html>
