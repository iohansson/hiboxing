require 'spec_helper'

describe User do
  context "Validation" do
    it "should not save user when password and confirmation do not match" do
      user = {
        name: 'coolname',
        password: 'right',
        password_confirmation: 'wrong'
      }
      expect{User.create(user)}.not_to change{User.count}
    end
  end
end
